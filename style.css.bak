*{
	margin:0;
	padding:0;
	box-sizing:border-box;
}
body{
	background-image:url("login page.jpg");
	padding:100px 0;
	padding-left:20px;
}
.form-container{
	background:white;
	background-image:url("page.jpg");
	height:70vh;
	width:300px;
	position:relative;
	padding: 20px 0;
	margin:auto;
	box-shadow: 0 0 20px 0px rgba(0,0,0.1);
	text-align:center;
}

.user, .email, .pass, .a2{
	color:white;
	font-size:20px;
	float:center;
}
.form-container span{
	font-weight: bold;
	padding: 0 10px;
	color: pointer;
	width:200px;
	display:inline-block;
}
.a1{
	display:inline-block;
	color:red;
}
.form-container form{
	max-width:300px;
	padding:0 20px;
	position: absolute;
	top: 130px;
}
form input{
	width: 80%;
	height:30px;
	margin: 10px 0;
	padding:0 10px;
	border: 1px solid red;
}

.in:hover{
	 background-color:silver;right:0px;
	color:blue;
}
.a4:hover{
	background-color:red;
	border-radius:50px;
	font-size:20px;
}
value:hover{
	display:block;
}
